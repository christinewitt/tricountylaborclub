---
const { image, field } = Astro.props;
---

<div class='line-item-wrapper'>
  <img class='icon' src={image} alt='' />
  <span><Fragment set:html={field} /></span>
</div>

<style>
  .icon {
    fill: black;
  }
  :global(.darkmode .icon) {
    filter: brightness(0) saturate(100%) invert(100%) sepia(0%)
      hue-rotate(100deg);
  }
  .line-item-wrapper {
    display: flex;
    align-items: center;
  }
  .line-item-wrapper > img {
    height: 1rem;
    width: 1rem;
  }
  .line-item-wrapper > span {
    margin-left: 0.5rem;
  }
</style>
