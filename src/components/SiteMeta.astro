---
import { ViewTransitions } from 'astro:transitions';

const { title, description, url, image } = Astro.props;

let subtitle = 'Tri-County Labor Club';
---

<!-- general meta -->
<meta name='title' content={`${title} | ${subtitle}`} />
<meta name='description' content={description} />
<meta name='author' content='â–²' />

<!-- open graph -->
<meta property='og:title' content={`${title} | ${subtitle}`} />
<meta property='og:description' content={description} />
<meta property='og:type' content='website' />
<meta property='og:url' content={url} />
<meta
  property='og:image'
  content={Astro.site ? `${Astro.site}${image}` : image}
/>

<!-- twitter card -->
<meta name='twitter:card' content='summary' />
<meta name='twitter:title' content={`${title} | ${subtitle}`} />
<meta name='twitter:description' content={description} />
<meta name='twitter:type' content='website' />
<meta
  name='twitter:image'
  content={Astro.site ? `${Astro.site}${image}` : image}
/>
<meta name='twitter:url' content={url} />

<!-- page title -->
<title>{title} | {subtitle}</title>

<ViewTransitions />
